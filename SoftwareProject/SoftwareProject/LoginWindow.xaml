<Window x:Class="SoftwareProject.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoftwareProject"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="450" Background='LightGray' FontSize='14'>
    <Border Background="Gray" Margin="20" CornerRadius="20">
        <StackPanel Margin="20">
            <Label Content="Login" Foreground="white" FontSize="25" HorizontalAlignment="center"/>
            <Separator></Separator>
            <Label Content="Username" Foreground="White" Margin="30 0"/>
            <TextBox Name="txtUserName" Width="300" HorizontalAlignment="Center"/>
            <Label Content="Password" Foreground="White" Margin="30 0  "/>
            <PasswordBox Name="txtPassword" Width="300" HorizontalAlignment="Center"/>
            <Button x:Name="btnStudent" Click="btnStudent_Click"  Foreground="Black" Content="Student Login" Width="100" Margin="70 5" Height="22" HorizontalAlignment="Center" />
            <Button x:Name="btnAdmin" Click="btnAdmin_Click"  Foreground="Black" Content="Admin Login" Width="100" Margin="70 0" Height="22" HorizontalAlignment="Center" />

        </StackPanel>
    </Border>
</Window>
